          %img{:src => '/images/icons/industrial.png', :alt=> 'Manufacturing'} 
          %a{:href => '#PMD'} PMD - Planned Manufacturing Districts
        %li
          %img{:src => '/images/icons/parks-entertainment.png', :alt=> 'Parks and Open Space'} 
          %a{:href => '#POS'} POS - Parks and Open Space
        %li
          %img{:src => '/images/icons/residential.png', :alt=> 'Residential'} 
          %a{:href => '#R'} R - Residential
        %li
          %img{:src => '/images/icons/trains.png', :alt=> 'Transportation'} 
          %a{:href => '#T'} T - Transportation

